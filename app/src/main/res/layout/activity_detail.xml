<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Detail"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/fav_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/Icon" />
        </LinearLayout>

        <!-- Main image -->

        <!-- Title -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/caffe_mocha" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Caffe Mocha"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice/Hot"
            android:textColor="#777777"
            android:textSize="14sp" />

        <!-- Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/Rating" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8  "
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(230)"
                android:textSize="14sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Beginner-style wrongly aligned icon buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="#eeeeee"
                android:src="@drawable/delivery" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:background="#eeeeee"
                android:src="@drawable/bean" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:background="#eeeeee"
                android:src="@drawable/milk" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="A cappuccino is an approximately 150 ml (5 oz) beverage, with 25 ml of espresso coffee and 85ml of fresh milk the fo.. Read More"
            android:textColor="#777777"
            android:textSize="14sp" />

        <!-- Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Size"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="S"
                android:backgroundTint="#eeeeee" />

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="M"
                android:backgroundTint="#c67c4e"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="L"
                android:backgroundTint="#eeeeee" />
        </LinearLayout>

        <!-- Price & button (beginner-friendly) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Price"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 4.53"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#c67c4e" />

        <Button
            android:id="@+id/buy_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:text="Buy Now"
            android:backgroundTint="#c67c4e"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
